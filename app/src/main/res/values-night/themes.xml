<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LishcaAutoInvities" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/idfgreen</item>
        <item name="colorPrimaryVariant">@color/idfgreen</item>
        <item name="colorOnPrimary">@color/cardview_dark_background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/idfgreen</item>
        <item name="colorSecondaryVariant">@color/idfgreen</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.LishcaAutoInvities.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LishcaAutoInvities.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LishcaAutoInvities.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.LishcaAutoInvities.Fullscreen" parent="Theme.LishcaAutoInvities">
        <item name="android:actionBarStyle">
            @style/Widget.Theme.LishcaAutoInvities.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.LishcaAutoInvities.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>