<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/idfficebc"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="50dp"
            app:srcCompat="@drawable/settingslogo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewAmount"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="000"
                android:textAlignment="textEnd"
                android:textColor="@color/black_overlay"
                android:textSize="24sp"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:indeterminate="false"
                android:max="200"
                android:progressTint="#009688" />

            <TextView
                android:id="@+id/textViewHistoryTitle"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="סריקות שמורות"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:text="שימו לב!  -  ככל שהמספר גבוה יותר האפליקציה תתפוס יותר נפח זיכרון"
            android:textAlignment="center"
            android:textColor="@color/material_dynamic_neutral_variant10"
            android:textSize="12sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textViewsSignatureTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="  חתימת הלשכה"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextSignature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="60dp"
            android:ems="10"
            android:inputType="text"
            android:text="לשכת..."
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <Switch
            android:id="@+id/WBSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:switchTextAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="  השתמש בוואטסאפ ביזנס"
            android:textAlignment="inherit"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/SaveAndCloseBtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="170dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="שמור וסגור"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>